<?xml version="1.0" encoding="UTF-8"?>

<openerp>
	<data>
		<record id="cuil_anses_action" model="ir.actions.act_window">
			<field name="name">Obtener constancia de Cuil</field>
			<field name="res_model">anses_cuil.wizard_constancia</field>
			<field name="src_model">res.partner</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>


		<record model="ir.ui.view" id="anses_res_partner_form">
			<field name="name">anses.res.partner.form</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />

			<field name="arch" type="xml">
                    <field name="website" position="after">
						<field name="constancia_cuil_pdf" filename="filename_constancia_cuil" />
						<field name="filename_constancia_cuil"	invisible="1" />
                    </field>
                  <div class="oe_button_box" name="button_box" position="inside">
					<field name="id" invisible="1" />
					<button name="%(cuil_anses_action)d" string="Constancia de Cuil" type="action"
						attrs="{'invisible':['|',('id','==',False),('constancia_cuil_pdf','!=',False)]}" class="oe_read_only"/>
                  </div>
                  
			</field>
		</record>

		<record model="ir.ui.view" id="anses_cuil_wizard">
            <field name="name">anses.constancia.cuil.wizard.form</field>
            <field name="model">anses_cuil.wizard_constancia</field>
            <field name="arch" type="xml">
                <form string="Obtener Constacia">
                    <group>
						<field name="captcha_anses" widget="image" />
						<field name="captcha_text" placeholder="Texto de la imagen"/>
						<field name="dni"/>
						<field name="nombre" />
						<field name="apellido"/>
                    </group>
					<a href="http://www.anses.gob.ar/constancia-de-cuil/" target="_blank">Sitio de Anses: http://www.anses.gob.ar/constancia-de-cuil/</a>
                    <footer>
						<button name="get_certificate_cuil_from_anses" type="object" 
								string="Obtener Certificado" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>


	</data>
</openerp>